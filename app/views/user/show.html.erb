<head>
  <title>User Profile</title>
</head>
<body id = "jobody">
<h1 id = "relhead">Labyrinth</h1>
<div id="content" class="clearfix">
  <section id="left">
    <div id="userStats" class="clearfix">
      <div class="pic">
        <img id="fitpic" src="<%= @pic %>" alt="some_text">
      </div>
      <div class="data">
        <h1><%= @name %></h1>
        <h3>Manhattan, KS</h3>
        <div class="sep"></div>
        <ul class="numbers clearfix">

           <li>Age<strong>21</strong></li>
          <li>Height<strong><%= Float("%.#{0}g" % (@height/12)) %></strong></li>
          <li>Weight<strong><%= @weight %></strong></li>
        </ul>
      </div>
    </div>

    <%= link_to image_tag('Relax.png') , relax_path %>

    <%= link_to image_tag('Time.png') , timed_path %>

    <%= link_to image_tag('Logout.png') , user_destroy_path %>
  </section>
  <section id="right">
    <div class="gcontent">
      <div class="head"><h1>Goals</h1></div>
      <h2 id = "steps">Steps</h2>
      <h2 id="stepsg"><%= @Steps2  %>/<%= @Steps  %></h2>
      <!--<h2>Steps Today: <%= @Steps2  %></h2>-->
      <h2 id = "cals">Calories </h2>
      <h2 id="calsg"><%= @Cals2  %>/<%= @Cals  %></h2>
     <!-- <h2>Miles: <%= @Dist2  %>/<%= @Dist  %></h2>-->
     <!-- <h2>Calories Burned: <%= @Cals2  %></h2>-->
      <!--<h3>Miles: <%= @Dist  %></h3>
      <h3>Miles Today: <%= @Dist2  %></h3>-->
    </div>
    <div class="gcontent">
      <div class="head"><h1>Achievements</h1></div>
      <div class="boxy">
        <p></p>
        <div class="badgeCount">
        </div>
      </div>
    </div>
  </section>
</div>
</body>



